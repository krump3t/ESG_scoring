# Copy to .env and fill in secrets
ASTRA_DB_API_ENDPOINT=
ASTRA_DB_APPLICATION_TOKEN=
ASTRA_DB_DATABASE_ID=
WATSONX_API_KEY=
WATSONX_PROJECT_ID=
WATSONX_URL=
# Optional overrides
WATSONX_EMBED_MODEL_ID=ibm/granite-embedding-278m-multilingual
WATSONX_VERSION=2023-05-29
WATSONX_GEN_MODEL_ID=ibm/granite-13b-instruct-v2

